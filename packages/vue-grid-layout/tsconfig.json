{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "rootDir": "./src", // 指定项目的根目录
    "lib": ["esnext", "dom"],
    "allowJs": true,
    "checkJs": false,
    "baseUrl": ".",
    "types": ["vitest/globals"],
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.vue",
    "src/**/*.d.ts",
    "test/**/*.spec.ts"
  ],
  "exclude": [
    "./node_modules",
    "./dist"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
